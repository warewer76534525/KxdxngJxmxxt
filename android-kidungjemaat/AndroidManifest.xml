<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.triplelands.kidungjemaat"
      android:versionCode="5"
      android:versionName="1.0.4"
      android:installLocation="auto">
    <uses-sdk android:minSdkVersion="4" />

    <application android:icon="@drawable/icon" 
    	android:label="@string/app_name"
    	android:name=".app.KJApp">
        <activity android:name=".activity.SongActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".activity.KJListActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".activity.PKJListActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".activity.NKBListActivity" android:theme="@android:style/Theme.NoTitleBar"/>
		<activity android:name=".activity.SongListTabActivity" android:theme="@android:style/Theme.NoTitleBar"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
</manifest>